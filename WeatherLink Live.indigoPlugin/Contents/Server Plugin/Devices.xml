<?xml version="1.0"?>
<Devices>
    <Device type="custom" id="weatherlink">
		<Name>WeatherLink Live</Name>
		<ConfigUI>	
			<Field id="address" type="textfield"  defaultValue="" tooltip="Enter IP address or Hostname of WeatherLink.">
				<Label>IP Address or Hostname:</Label>
			</Field>
			<Field id="port" type="textfield" defaultValue="80" tooltip="Port number for WeatherLink.">
				<Label>Port:</Label>
			</Field>
            <Field id="sep1" type="separator"/>
            <Field id="pollingFrequency" type="textfield" defaultValue="15">
                <Label>Poll WeatherLink device every (minutes):</Label>
            </Field>
            <Field id="pollingFrequencyNote" type="label" fontSize="small" fontColor="darkgray">
                <Label>The plugin will not poll if the frequency is set to zero.</Label>
            </Field>
		</ConfigUI>	
        <States>
            <State id="did">
                <ValueType>String</ValueType>
                <TriggerLabel>DiD</TriggerLabel>
                <ControlPageLabel>DiD</ControlPageLabel>
            </State>
            <State id="timestamp">
                <ValueType>String</ValueType>
                <TriggerLabel>Time Stamp</TriggerLabel>
                <ControlPageLabel>Time Stamp</ControlPageLabel>
            </State>
            <State id="error">
                <ValueType>String</ValueType>
                <TriggerLabel>Error</TriggerLabel>
                <ControlPageLabel>Error</ControlPageLabel>
            </State>
            <State id="status">
                <ValueType>String</ValueType>
                <TriggerLabel>Status</TriggerLabel>
                <ControlPageLabel>Status</ControlPageLabel>
            </State>
        </States>
        <UiDisplayStateId>status</UiDisplayStateId>
    </Device>		
